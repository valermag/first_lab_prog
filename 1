#include <conio.h>
#include <iostream>
#include <cmath>
#include <stdio.h>
using namespace std;

long int fact(int N)
{
    if(N < 0)
        return 0;
    if (N == 0)
        return 1;
    else
        return N * fact(N - 1);
}

int main()
{
    int n=-1;

    do{
        printf("enter n \n");
        scanf("%d",&n);
    }while(n<=0);
    long int sum=0;
    for(int i=1;i<=n;i++)
    {
        long int proiz=1;
        for(int j =1;j<=i;j++)
        {
            proiz*=fact(i+j);
            proiz/=fact(i);
        }
        sum+=proiz;
    }

    printf("sum = %ld",sum);

}
